        <Button x:Name="btnMainContinue" Content="CONTINUE" HorizontalAlignment="Left" Margin="188,199,0,0" VerticalAlignment="Top" Width="183" Height="40" Foreground="Black" FontSize="20" FontWeight="Bold" Click="Button_Click">
